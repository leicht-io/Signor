<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left_right"
    android:paddingTop="@dimen/padding_top_bottom"
    android:paddingRight="@dimen/padding_left_right"
    android:paddingBottom="@dimen/padding_top_bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/knobcontainer"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:orientation="vertical">

            <leicht.io.signor.Knob
                android:id="@+id/knob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                app:BackgroundColour="?android:attr/colorBackground"
                app:TextColour="?android:attr/textColorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frequencyDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="@string/frequency_placeholder"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/primary_text_size" />

                <TextView
                    android:id="@+id/volumeDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="@string/volume_placeholder"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/secondary_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/knobcontainer"
            android:layout_marginTop="@dimen/seekbar_container_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fine_adjust"
                android:textColor="@color/white" />

            <com.google.android.material.slider.Slider
                android:id="@+id/fineAdjust"
                app:labelBehavior="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/seekbar_margin_bottom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/volume"
                android:textColor="@color/white" />

            <com.google.android.material.slider.Slider
                android:id="@+id/volumeAdjust"
                app:labelBehavior="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/seekbar_margin_bottom" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/button_group_margin">
                <ImageButton
                    android:id="@+id/sine"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wave_type_size"
                    android:layout_weight="1.0"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_button_states"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wave_sine"
                    android:stateListAnimator="@null"
                    android:text="@string/sin"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/square"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wave_type_size"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1.0"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_button_states"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wave_square"
                    android:text="@string/squ"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/sawtooth"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wave_type_size"
                    android:layout_weight="1.0"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_button_states"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wave_sawtooth"
                    android:text="@string/saw"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        style="?attr/floatingActionButtonLargeStyle"
        app:srcCompat="@drawable/ic_action_play" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
