<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_gradient</item>
        <item name="colorPrimary">@color/background_start</item>
        <item name="colorPrimaryDark">@color/background_start</item>
        <item name="colorAccent">@color/background_start</item>
        <item name="android:statusBarColor">@color/background_start</item>
    </style>

    <style name="Theme.Signor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/background_start</item>
        <item name="android:statusBarColor">@color/background_start</item>
    </style>
</resources>